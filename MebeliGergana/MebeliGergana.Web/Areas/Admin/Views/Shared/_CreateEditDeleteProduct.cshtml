@model IEnumerable<MebeliGergana.Models.ViewModels.Admin.ProductViewModel>


<p>
    @Html.ActionLink("Ново изделие", "Create"+(string)ViewBag.Title)
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Промяна", "Edit"+ (string)ViewBag.Title, new { id = item.Id }) |
                @*@Html.ActionLink("Details", "Details"+ (string)ViewBag.Title, new { id = item.Id }) |*@
                @Html.ActionLink("Изтриване", "Delete"+ (string)ViewBag.Title, new { id = item.Id })
            </td>
        </tr>
    }

</table>
